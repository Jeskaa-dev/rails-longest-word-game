<div class="container">
<h1>Welcome to the longest word-game!</h1>
<ul>
  <% @letters.each do |letter| %>
    <div class="boxlist"><li class="listelement"><%= letter.capitalize %></li></div>
  <% end %>
</ul>
<p>What is your longest word?</p>
<form action="/score" method="POST" data-turbo="false" class="form">
  <input type="text" name="input">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" value="Play" class="btn btn-primary">
</div>
